<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:background="#BC1C2B"
     android:layout_weight="0.5">

     <Button
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
          android:text="sign up"
         android:layout_alignParentEnd="true"
         android:layout_marginTop="34dp"
         android:backgroundTint="#BC1C2B"

         />

     <View
         android:layout_width="21dp"
         android:layout_height="23dp"


         />

 </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">
<TextView
    android:id="@+id/tv1"
    android:layout_width="207dp"
    android:layout_height="68dp"
    android:text="welcome back continue to signup!"
    android:layout_marginTop="29dp"
    android:layout_marginRight="182dp"
    android:layout_marginLeft="24dp"
    android:textColor="#BC1C2B"
    android:textSize="22sp"
    android:paddingBottom="10dp"
/>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:layout_below="@id/tv1"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="26dp"



            />

        <EditText
            android:id="@+id/et1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="enter the name"
            android:layout_below="@id/tv2"
            android:textSize="18sp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="26dp"
            android:paddingTop="20dp"
            android:paddingLeft="22dp"
            android:paddingRight="85dp"
            android:paddingBottom="17dp"
            android:textColor="#A2A2A2"


            />
<TextView
    android:id="@+id/tv3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="email"
    android:layout_below="@id/et1"
    android:layout_marginTop="19dp"
    android:textSize="18sp"
    android:layout_marginLeft="24dp"

    />

        <EditText
            android:id="@+id/et2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="enter the email"
            android:layout_below="@id/tv3"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="26dp"
            android:paddingTop="20dp"
            android:paddingLeft="22dp"
            android:paddingRight="85dp"
            android:paddingBottom="17dp"
            android:textColor="#A2A2A2"
/>

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="password"
            android:layout_below="@id/et2"
            android:layout_marginTop="19dp"
            android:textSize="18sp"
            android:layout_marginLeft="24dp"

            />

        <EditText
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="enter password"
            android:layout_below="@id/tv4"
            android:textSize="18sp"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="26dp"
            android:paddingTop="20dp"
            android:paddingLeft="22dp"
            android:paddingRight="85dp"
            android:paddingBottom="17dp"
            android:textColor="#A2A2A2"
            />
        <Button
            android:id="@+id/bn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv5"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="Sign In"
            android:paddingLeft="149dp"
            android:paddingRight="134dp"
            android:paddingTop="13dp"
            android:paddingBottom="18dp"
            android:backgroundTint="#BC1C2B"
            android:textSize="22dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Have An Account? Sign in"
            android:layout_below="@id/bn2"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            />
    </RelativeLayout>
</LinearLayout>